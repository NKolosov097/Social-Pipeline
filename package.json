{
    "name": "frontend",
    "version": "0.1.0",
    "description": "web application \"Social Pipeline\"",
    "private": true,
    "dependencies": {
        "@testing-library/jest-dom": "^5.16.4",
        "@testing-library/react": "^13.2.0",
        "@testing-library/user-event": "^13.5.0",
        "antd": "^4.20.2",
        "classnames": "^2.3.1",
        "cors": "^2.8.5",
        "express": "^4.18.1",
        "nodemon": "^2.0.19",
        "prop-types": "^15.8.1",
        "react": "^18.1.0",
        "react-dom": "^18.1.0",
        "react-router-dom": "^6.3.0",
        "react-scripts": "5.0.1",
        "styled-components": "^5.3.5",
        "web-vitals": "^2.1.4"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "server": "nodemon mock/server.js",
        "test": "react-scripts test",
        "lint": "npx eslint ./src"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx}": [
            "prettier --write",
            "eslint --fix",
            "git add"
        ],
        "*.{html,css}": [
            "prettier --write",
            "git add"
        ]
    },
    "eslintConfig": {
        "extends": [
            "eslint:recommended",
            "react-app",
            "react-app/jest",
            "plugin:jsx-a11y/recommended",
            "prettier"
        ],
        "plugins": [
            "react",
            "jsx-a11y",
            "import",
            "react-hooks",
            "prettier"
        ],
        "rules": {
            "prettier/prettier": [
                "error",
                {
                    "endOfLine": "auto"
                }
            ]
        }
    },
    "jest": {
        "transformIgnorePatterns": [
            "/node_modules/(?!antd|@ant-design|rc-.+?|@babel/runtime).+(js|jsx)$"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "author": "Emelianov D.O. :)",
    "license": "MIT",
    "devDependencies": {
        "@types/express": "^4.17.13",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.0.0",
        "http-proxy-middleware": "^2.0.6",
        "husky": "^7.0.4",
        "lint-staged": "^12.4.1",
        "prettier": "^2.6.2"
    }
}
